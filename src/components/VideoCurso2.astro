---
const {title, text, path_video, autor} = Astro.props
---

<div class="w-full max-w-xl">
    <h2 class="text-2xl font-bold mb-2">{title}</h2>
    <p class="mb-2">Por: <span class="text-emerald-500 font-bold">{autor}</span></p>
    <div class="relative max-w-xl">
        <video class="w-full h-auto" src={path_video} controls></video>
    </div>
    <p class="text-neutral-400 mt-4 mb-4">{text}</p>
</div>