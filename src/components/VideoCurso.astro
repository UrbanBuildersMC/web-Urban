---
const {title, text, video_id, autor} = Astro.props
---

<div>
    <h2 class="text-2xl font-bold mb-2">{title}</h2>
    <p class="mb-2">Por: <span class="text-emerald-500 font-bold">{autor}</span></p>
    <div class="relative max-w-xl pt-[56.25%]">
        <iframe class="absolute top-0 left-0 w-full h-full"
        src={video_id}
        frameborder="0" 
        allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" 
        allowfullscreen>
        </iframe>
    </div>
    <p class="text-neutral-400 mt-4 mb-4">{text}</p>
</div>