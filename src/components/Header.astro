<header id="hero" class="hero">
    <div class="overlay-general"></div>
    <div class="hero-logo">
        <img src="/Urban_Logo_1.png">
        <h1>URBAN <span>BUILDERS</span></h1>
    </div>
    <div class="hero-btns">
        <a class="btn" href="#"><i class="fa-solid fa-link"></i> mc.urbanbuilder.net</a>
    </div>
</header>
<style>
    header{
        width: 100%;
        height: 100dvh;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        background-image: url(../assets/bg-main.png);
        background-size: cover;
        background-repeat: no-repeat;
        background-position: center;
        font-family: 'Poppins', sans-serif;  
    }
    .overlay-general {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(0, 0, 0, 0.2); /* Ajusta la opacidad aqu√≠ */
        backdrop-filter: blur(5px);
        z-index: 1;
    }
    .hero-logo{
        display: flex;
        flex-direction: row;
        align-items: center;
        justify-content: center;
        gap: 1rem;
        z-index: 2;
    }
    .hero-logo img{
        width: auto;
        height: 200px;
    }
    .hero-logo h1{
        font-family: "Luckiest Guy", sans-serif;
        font-weight: 700;
        font-size: 120px;
        line-height: 1.1;
        letter-spacing: 4px;
        color: white;
    }
    .hero-logo span{
        display: block;
        font-family: 'Satisfy';
        font-size: 80px;
        color: #b6b6b6;
    }
    .hero-btns{
        margin-top: 4rem;
        z-index: 1;
        display: flex;
        justify-content: center;
        gap: 1rem;
    }
    .hero-btns .btn{
        background-color: rgb(0, 255, 170, 0.2);
        border-radius: 10px;
        text-decoration: none;
        color: #e0e0e0;
        padding: 10px 15px;
        transition: transform 0.3s ease;
    }
    .hero-btns .btn:hover{
        background-color: rgb(0, 255, 170, 0.5);
        box-shadow: 0 5px 15px rgb(0, 255, 170, 0.5);
        transform: translateY(-5px);
    }
</style>